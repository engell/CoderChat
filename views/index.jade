	body
		#all.container
			a(href='https://github.com/engell/CoderChat', target='_blank')
				img(style='position: absolute; top: 0; right: 0; border: 0;', src='https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png', alt='Fork me on GitHub')
			#logo
				img(src="/images/coderchat_logo.png")
				br
				br
				#alert
					.alert.alert-error
						strong Identif&iacute;cate.
			#full.row
				#contends.span9
					#boxes(style='position:relative;')
						#frameChat(style='height: 210px')
							ul#log(style='height: 200px; overflow-y: scroll;')
						#inputName.span5
							span Nombre:
							br
							br
							.input-append
								input#nick.input-medium(type='text')
								button#buttonUser.btn.btn-info(type='button') Enviar
						#send.span5
							#userField
							br
							.input-append
								input#message.input-large(type='text')
								button#buttonSend.btn.btn-info(type='button') Enviar
							form#googleForm(method='post', action='Introduce aquí tu macro', name='theForm', target='hidden_iframe')
								input#me(name='username')
								input#submit(name='message')
								input#date(name='date')
								button#toGoogle x
								#fields


				iframe#hidden_iframe(name='hidden_iframe', style='display: none;')
				#right.span3
					#frameUsers(style='height: 120px;')
						#users(style='height: 100%; overflow-y: scroll;') En linea:
					#adds
						a(href="http://dark-engell.blogspot.mx", target="_blank", alt="Dark Engell")
							img#engell(src="/images/darkengell.png", alt="Dark Engell")
					#buttonsArea
						button#gDocsButton.btn <img src="images/gdrive_logo.png"> Enviar Archivo...
						br
						button#gistForm.btn <img src="images/gist_logo.png"> Enviar Código...


			#createGist
				section#box
					span Descripción:
					br
					input#descriptionGit(type="text", value='Un simple Gist', onfocus='if (this.value=="Un simple Gist") this.value="";')
					br
					span Código:
					br
					textarea#textarea(name='textdata')(style="height: 200px; width:650px;")
				section#select
					br
					p Lenguaje:
					label
						select.x-list.btn
							option.btn(value='json') json
							option.btn(value='html') html
							option.btn(value='txt') txt
							option.btn(value='js') javascript
							option.btn(value='coffee') coffeescript
							option.btn(value='rb') ruby
							option.btn(value='py') python
							option.btn(value='css') css
							option.btn(value='jade') jade
							option.btn(value='erb') html+erb
					input.checkBox#checkBox(type='checkbox')Check Público
					br
					button.x-button.btn Enviar Gist
					button#cancelarGist.btn Cancelar